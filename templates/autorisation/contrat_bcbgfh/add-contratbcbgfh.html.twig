{% extends 'template_base.html.twig' %}

{% block Title %}
    {% trans %}SNVLT{% endtrans%} - Contrats BCBGFH
{% endblock %}

{% block titre_page %}
    <h2 class="text-dark font-weight-bold mb-2">
        <img src="{{ asset('assets/images/webapp/contract2.png') }}" alt="reprise">  Contrats BCBGFH - [Ajout]
    </h2>
{% endblock %}

 {% block menu %}
     {% include 'base/menu.html.twig' %}
 {% endblock %}

{% block page_content %}

    <link href="{{ asset('assets/dselect-main/dist/css/dselect.css') }}" rel="stylesheet" />
    <section class="section">

        <div class="card">
            <div class="card-body">

                {{ form_start(form, {'attr': {novalidate: 'novalidate'}}) }}
                <div class="row p-3 bg-white m-1">
                    <div class="col-md-5">
                        <div class="">{{ form_row(form.numero_contrat) }}</div>
                        <div class="">{{ form_row(form.date_contrat)}}</div>
                        <div class="">{{ form_row(form.date_signature)}}</div>
                        <div class="">{{ form_row(form.duree)}}</div>

                        <button type="submit" class="btn-sm btn-success btn_valider ml-1 w-100 fs-5"></button>

                    </div>
                    <div class="col-md-5">
                        <div class="">{{ form_row(form.nb_tiges)}}</div>
                        <div class="">{{ form_row(form.code_foret) }}</div>
                        <div class="">{{ form_row(form.code_exploitant) }}</div>

                        <button type="submit" class="btn-sm btn-success btn_valider ml-1 w-100 fs-5"></button>

                    </div>
                </div>
                {{ form_end(form) }}
            </div>
            </div>
        </div>


        <!--Modification de l'attribution -->

    </section>


    {#<script src="{{ asset('assets/webapp/assets/vendors/jquery/jquery.min.js') }}"></script>#}
    <script src="{{ asset('assets/dselect-main/dist/js/dselect.min.js') }}"></script>
    <script src="{{ asset('assets/assets/js/jquery.min-3.5.1.js') }}"></script>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="{{ asset('assets/select2/select2.min.js') }}"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>

{% endblock %}
