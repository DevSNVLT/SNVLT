{% extends 'template_base.html.twig' %}

{% block Title %}
    {% trans %}SNVLT{% endtrans %} - Chargement BCBGFH-FC - [N° {{ chargement.numeroPagebcbgfh }} - {{ chargement.codeDocbcbgfh.codeContrat.codeExploitant.sigle }}]
{% endblock %}

{% block titre_page %}
    <h2 class="text-dark font-weight-bold mb-2">
        <img src="{{ asset('assets/images/webapp/loading.png') }}" alt="{% trans %}bcbgfh{% endtrans %}">  Détails Chargement BCBGFH-FC - [ N° : {{ chargement.numeroPagebcbgfh }}]
    </h2>
    <div class="d-sm-flex justify-content-xl-between align-items-center mb-2">
        <div class="btn-group p-1 rounded-5 " role="group" aria-label="Basic example">
            {% if (chargement.photo) %}
                <a class="btn alert-dark text-dark p-2 mt-2" style="border: 0px; font-size: 16px;" href="{{ asset('images/uploads/bcbgfh') }}/{{ chargement.photo }}" target="_blank"> <img src="{{ asset('assets/images/webapp/photo.png') }}" alt="photo" height="32" style="margin-right: 5px;">Voir la photo</a>
            {% endif %}
        </div>
    </div>
{% endblock %}


 {% block notifs %}
     {% include 'base/notifs.html.twig' %}
 {% endblock %}

 {% block menu %}
     {% include 'base/menu.html.twig' %}
 {% endblock %}

{% block page_content %}
    <link rel="stylesheet" href="{{ asset('assets/webapp/assets/vendors/simple-datatables/style.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/assets_other/vendor/fonts/boxicons.css') }}" />


    <!-- Core CSS -->
    <link rel="stylesheet" href="{{ asset('assets/assets/css/modal.css') }}" />

    <link rel="stylesheet" href="{{ asset('assets/Js/cartographie/resources/libs/leaflet-measure.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/Js/cartographie/resources/Leaflet.PolylineMeasure.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/Js/cartographie/resources/libs/leaflet-measure.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/Js/cartographie/style.css') }}">
    <link rel="stylesheet" href="https://elrobis.github.io/L.Control.ZoomBar/src/L.Control.ZoomBar.css">

    {% set volumeTotal = 0 %}
    {% for ligne in  chargement.lignepagebcbgfhs %}
        {% set volumeTotal = volumeTotal +  ligne.cubageLignepagebcbgfh %}
    {% endfor %}
    {% set volumeTotal = (volumeTotal) %}
    <section class="section p-2" style="background:radial-gradient(#f3fbda, #e4fafe); border: 1px lightgrey solid">

        <div class="card " style="border: lightgrey solid 1px;background: #e0ebf7;">

            <div class="card-body p-2" style="background: #f4f2f2">
                {% if (chargement.confirmationUsine == true) %}
                    <div class="p-2 m-2 text-white" style="background: #058021; font-size: 22px;">Chargement Grumes déjà accepté par  {{ chargement.parcUsineBcbgfh.raisonSocialeUsine }}</div>
                {% elseif (chargement.motivationRejet) %}
                    <div class="bg-danger p-2 m-2 text-white" style="font-size: 22px;">Chargement Grumes refusé par {{ chargement.parcUsineBcbgfh.raisonSocialeUsine }}</div>
                {% endif %}
                <div class="alert-warning mb-3">
                    <div class="row alert-secondary ">
                        <span class="col-md-2" style="font-size: 16px;">{{ 'Logger' }}</span>
                        <span class="text-dark font-weight-bold col-md-9" style="font-size: 16px;">{{ chargement.codeDocbcbgfh.codeContrat.codeExploitant.raisonSocialeExploitant }} - {{ chargement.codeDocbcbgfh.codeContrat.codeExploitant.marteauExploitant }} </span>
                    </div>
                    <div class="row alert-secondary ">
                        <span class="col-md-2" style="font-size: 16px;">{{ 'Forest' }}</span>
                        <span class="text-dark font-weight-bold badge alert-dark p-1" style="font-size: 16px;margin-left: 10px;">{{ chargement.codeDocbcbgfh.codeContrat.codeForet.denomination }}</span>
                    </div>
                    <div class="row alert-secondary ">
                        <span class="col-md-2" style="font-size: 16px;">{{ 'Document' }}</span>
                        <span class="text-dark font-weight-bold badge alert-dark p-1" style="font-size: 16px;margin-left: 10px;">{{ chargement.codeDocbcbgfh.numeroDocbcbgfh }}</span>
                    </div>
                    <div class="row alert-secondary ">
                        <span class="col-md-2" style="font-size: 16px;">{{ 'loading date' }}</span>
                        <span class="text-dark font-weight-bold col-md-9" style="font-size: 16px;">{{ chargement.dateChargementbcbgfh | date('d/m/Y') }}</span>
                    </div>
                    <div class="row alert-secondary ">
                        <span class="col-md-2" style="font-size: 16px;">{{ 'Destination' }}</span>
                        <span class="text-dark font-weight-bold col-md-9" style="font-size: 16px;">{{ chargement.parcUsineBcbgfh.raisonSocialeUsine }} - {{ chargement.destinationPagebcbgfh }}</span>
                    </div>
                    <div class="row alert-secondary mb-2">
                        <span class="col-md-2" style="font-size: 16px;">{{ 'Total volume' }}</span>
                        <span class="text-white font-weight-bold badge p-2 bg-danger" style="font-size: 16px;margin-left: 10px;">{{ volumeTotal }} m<sup>3</sup></span>
                    </div>
                </div>
                <table class="table table-responsive" id="data_bcbgfh">
                    <thead>
                    <tr class="alert-primary">
                        <th class="text-center font-weight-bold" style="font-size: 20px;width: 10%;">{{ 'Tree No' |trans}}</th>
                        <th class="text-center font-weight-bold" style="font-size: 20px;width: 10%;">{{ 'Letter' |trans}}</th>
                        <th class="font-weight-bold" style="font-size: 20px;width: 15%;">{{ 'species' |trans }}</th>
                        <th class="text-center font-weight-bold" style="font-size: 20px;width: 7%;">{{ 'Zone' |trans }}</th>
                        <th class="text-center font-weight-bold" style="font-size: 20px;width: 7%;">{{ 'X' |trans}}</th>
                        <th class="text-center font-weight-bold" style="font-size: 20px;width: 7%;">{{ 'Y' |trans}}</th>
                        <th class="text-center font-weight-bold" style="font-size: 20px;width: 7%;">{{ 'length' |trans}}</th>
                        <th class="text-center font-weight-bold" style="font-size: 20px;width: 7%;">{{ 'Diameter' |trans}}</th>
                        <th class="text-center font-weight-bold" style="font-size: 20px;width: 10%;">{{ 'Volume m' |trans}}<sup>3</sup></th>
                    </tr>
                    </thead>
                    <tbody class="bg-white text-center">
                    {% for ligne_bcbgfh in chargement.lignepagebcbgfhs %}
                        <tr>
                            <td>{{ ligne_bcbgfh.numeroLignepagebcbgfh }}</td>
                            <td>{{ ligne_bcbgfh.lettreLignepagebcbgfh }}</td>
                            <td>{{ ligne_bcbgfh.nomEssencebcbgfh.nomVernaculaire }}</td>
                            <td>{{ ligne_bcbgfh.zhLignepagebcbgfh.zone }}</td>
                            <td>{{ ligne_bcbgfh.xLignepagebcbgfh }}</td>
                            <td>{{ ligne_bcbgfh.yLignepagebcbgfh }}</td>
                            <td>{{ ligne_bcbgfh.longeurLignepagebcbgfh }}</td>
                            <td>{{ ligne_bcbgfh.diametreLignepagebcbgfh }}</td>
                            <td>

                                {{ ligne_bcbgfh.cubageLignepagebcbgfh}}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {% if (app.user.codeindustriel and chargement.confirmationUsine == false) %}
                    <hr>
                    <a href="#" data-bs-toggle="modal" data-bs-target="#acceptRequest" class="btn btn-sm bg-primary p-2 me-2 ms-5 text-white font-weight-light" style="font-size: 16px;font-weight: lighter"><i class="mdi mdi-check-circle" style="font-size: 24px;margin-right: 10px;"></i>Accepter le chargement</a>
                    <a href="#" class="btn btn-sm bg-danger p-2 me-2 ms-5 text-white font-weight-light" style="font-size: 16px;font-weight: lighter"><i class="mdi mdi-message-alert" style="font-size: 24px;margin-right: 10px;"></i>Refuser</a>
                {% endif %}
            </div>
        </div>
    </section>

    <!-- Modal ACCEPT-->
    <div class="modal fade" id="acceptRequest" data-bs-backdrop="static" tabindex="-1">
        <div class="modal-dialog">
            <form class="modal-content">
                <div class="modal-header alert-success">
                    <h5 class="modal-title" id="backDropModalTitle"><img src="{{ asset('assets/images/webapp/loading.png') }}" alt="loading" style="margin-right: 10px; height: 32px;"> {{ 'Loading data' | trans}}</h5>
                </div>
                <div class="modal-body">
                    <div class="justify-content-start d-inline-flex">
                        <div class="m-2">
                            <img src="{{ asset('assets/images/webapp/attention.png') }}" alt="attention">
                        </div>
                        <div class="m-2">
                            <label for="motif" class="text-dark font-weight-bold">Nous avons besoin de votre approbation</label>
                            <h6  class="text-danger ">Voulez-vous accepter ce chargement sur votre parc ?</h6>
                        </div>
                    </div>

                    <div class="text-center mt-3">
                        <a type="button" class="btn btn-danger text-white font-weight-light refuse_loading" data-bs-dismiss="modal" id="{{ chargement.id }}"  style="font-size: 16px;">
                            <i class="mdi mdi-cancel text-white me-2 " style="font-size: 20px;margin-right: 5px;"></i>Annuler
                        </a>
                        <a type="button" class="btn btn-success accepter font-weight-light  accept_loading" id="{{ chargement.id }}" style="font-size: 16px;margin-left: 15px;">
                            <i class="mdi mdi-check-circle text-white ms-4" style="font-size: 20px;margin-right: 5px;"></i> Autoriser le chargement
                        </a>
                    </div>
                    <h1 class="text-danger alert-light loading_chr"></h1>
                </div>
            </form>
        </div>
    </div>



    <script src="{{ asset('assets/webapp/assets/vendors/simple-datatables/simple-datatables.js') }}"></script>
    <script src="{{ asset('assets/webapp/assets/vendors/jquery/jquery.min.js') }}"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <script src="{{ asset('assets/Js/cartographie/resources/leaflet/leaflet.js') }}"></script>
    <script src="{{ asset('assets/Js/cartographie/resources/libs/leaflet.browser.print.js') }}"></script>
    <script src="{{ asset('assets/Js/cartographie/resources/jquery/jquery-3.6.0.min.js') }}"></script>
    <script src="{{ asset('assets/Js/cartographie/resources/leaflet-providers.js') }}"></script>
    <script src="{{ asset('assets/Js/cartographie/resources/Leaflet.PolylineMeasure.js') }}"></script>
    <script src="https://elrobis.github.io/L.Control.ZoomBar/src/L.Control.ZoomBar.js"></script>
    <script src="https://unpkg.com/leaflet-control-geocoder/dist/Control.Geocoder.js"></script>
    <script src="{{ asset('assets/Js/cartographie/main.js') }}"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="{{ asset('assets/Js/utilitaires.js') }}"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

    <script>
        $('.accept_loading').on('click', function (){
            document.querySelector('.loading_chr').innerText = "Chargement..."
            document.querySelector('.loading_chr').style = "padding:5px;"
            $.ajax({
                'url' : '{{ path('app_portail') }}snvlt/detail_bcbgfh_loading/accept/{{ chargement.id }}',
                type : 'POST',
                success : function (){
                    render_toast_value("Chargement accepté",1)
                    document.location.href = "{{ path('app_tdb_admin') }}";
                    $('.refuse_loading').click();
                },
                error : function (){
                    render_toast_value("Erreur dans le traitement", 0)
                    $('.refuse_loading').click()
                }
            })
            //document.location.reload();
        })
    </script>

{% endblock %}