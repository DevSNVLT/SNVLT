{% extends 'template_base.html.twig' %}

{% block Title %}
    SNVLT - EXPORTATEUR - [AJOUT]
{% endblock %}

{% block titre_page %}
    <h2 class="text-dark font-weight-bold mb-2">
        <img src="{{ asset('assets/images/webapp/exportateur.png') }}" alt="exportateur">  Exportateurs
    </h2>
{% endblock %}

 {% block menu %}
     {% include 'base/menu.html.twig' %}
 {% endblock %}

{% block page_content %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>

    <section class="section">
        <div class="card">

            <div class="card-body">
                <h3 class="text-danger">
                    {% if (new_item == "true") %}
                        Ajouter un
                    {% else %}
                        Editer un
                    {% endif %} exportateur
                </h3>
                {{ form_start(form, {'attr': {novalidate: 'novalidate'}}) }}
                <div class="row p-3 bg-white m-1">
                    <div class="col-md-4">
                        <div class="">{{ form_row(form.code_exportateur) }}</div>
                        <div class="">{{ form_row(form.raison_sociale_exportateur) }}</div>
                        <div class="">{{ form_row(form.sigle) }}</div>
                        <div class="">{{ form_row(form.code_cantonnement) }}</div>
                    </div>
                    <div class="col-md-4">
                        <div class="">{{ form_row(form.adresse_exportateur) }}</div>
                        <div class="">{{ form_row(form.tel_exportateur) }}</div>
                        <div class="">{{ form_row(form.email_exportateur) }}</div>
                        <div class="">{{ form_row(form.date_creation) }}</div>
                    </div>

                    <div class="col-md-4">
                        <div class="">{{ form_row(form.personne_ressource, {'attr': {'readonly' : true}}) }}</div>
                        <div class="">{{ form_row(form.email_personne_ressource, {'attr': {'readonly' : true}}) }}</div>
                        <div class="">{{ form_row(form.mobile_personne_ressource, {'attr': {'readonly' : true}}) }}</div>
                    </div>

                </div>
                <hr>

                <a href="{{ path('ref_exportateurs') }}" class="btn btn-sm bg-danger p-2 me-2 ms-5 text-white" style="font-weight: lighter"><i class="mdi mdi-backspace" style="font-size: 18px;margin-right: 10px;"></i>{% trans %}Back to list{% endtrans %}</a>
                <button type="submit"  class="btn btn-sm bg-primary text-white p-2" style="margin-left: 10px;font-weight: lighter">

                    {% if (new_item == "true") %}
                        <i class="mdi mdi-database-edit" style="font-size: 18px;margin-right: 10px"></i>Ajouter un exportateur
                    {% else %}
                        <i class="mdi mdi-database-edit" style="font-size: 18px;margin-right: 10px"></i>Editer un exportateur
                    {% endif %}
                </button>
                {{ form_end(form) }}
            </div>
        </div>

    </section>

{% endblock %}

